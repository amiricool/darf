<plugin>
  <groupId>org.apache.maven.plugins</groupId>
  <artifactId>maven-antrun-plugin</artifactId>
  <version>3.2.0</version>
  <executions>
    <execution>
      <id>add-evolutions-into-zip</id>
      <phase>prepare-package</phase>
      <goals><goal>run</goal></goals>
      <configuration>
        <failOnError>true</failOnError>
        <target name="add-evolutions-into-zip">
          <property name="src.dir" value="${basedir}/../target/package/ems_evolutions"/>
          <property name="zip"     value="${archive}"/> <!-- ex: ${project.build.directory}/app.zip -->

          <zip destfile="${zip}" update="true" whenempty="fail">
            <zipfileset dir="${src.dir}" includes="**/*" prefix="resources/ems_evolutions/"/>
          </zip>
        </target>
      </configuration>
    </execution>
  </executions>
</plugin>