<plugin>
  <groupId>org.apache.maven.plugins</groupId>
  <artifactId>maven-antrun-plugin</artifactId>
  <version>3.2.0</version>
  <executions>
    <execution>
      <id>append-to-zip</id>
      <phase>package</phase>
      <goals><goal>run</goal></goals>
      <configuration>
        <failOnError>true</failOnError>
        <target name="append-to-zip" description="Ajouter des fichiers Ã  un ZIP existant">
          <property name="zip" value="${project.build.directory}/app.zip"/>
          <property name="extras.dir" value="${project.build.directory}/extras"/>
          <property name="thirdparty.zip" value="${project.build.directory}/third-party.zip"/>

          <!-- Ajouter depuis le systÃ¨me de fichiers -->
          <zip destfile="${zip}" update="true" duplicate="preserve" encoding="UTF-8">
            <fileset dir="${extras.dir}">
              <include name="readme.txt"/>
              <include name="assets/**"/>
              <exclude name="**/*.tmp"/>
            </fileset>

            <!-- Ajouter depuis un autre ZIP, dans un sous-dossier -->
            <zipfileset src="${thirdparty.zip}" includes="lib/**" prefix="libs/"/>
          </zip>
        </target>
      </configuration>
    </execution>
  </executions>
</plugin>