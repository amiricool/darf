<plugin>
  <groupId>org.apache.maven.plugins</groupId>
  <artifactId>maven-antrun-plugin</artifactId>
  <version>3.1.0</version>
  <executions>
    <execution>
      <id>filter-zip-with-zipfileset</id>
      <phase>prepare-package</phase>
      <goals><goal>run</goal></goals>
      <configuration>
        <target>
          <property name="zip.tmp" value="${project.build.directory}/filtered.zip"/>

          <!-- 1) Recréer l’archive en excluant ce que tu veux supprimer -->
          <zip destfile="${zip.tmp}">
            <!-- Tout le ZIP, sauf applications/** -->
            <zipfileset src="${archive}">
              <exclude name="applications/**"/>
            </zipfileset>

            <!-- Puis on remet UNIQUEMENT ce que l’on veut garder sous applications/ -->
            <zipfileset src="${archive}">
              <include name="applications/itl-container*/**"/>
              <!-- <include name="applications/itl-core-logger/**"/> -->
              <!-- <include name="applications/itl-interface-cft/**"/> -->
              <!-- <include name="applications/itl-interface-mqs/**"/> -->
              <include name="applications/itl-interface-remediation/**"/>
            </zipfileset>
          </zip>

          <!-- 2) Remplacer l’original -->
          <delete file="${archive}" quiet="true"/>
          <move file="${zip.tmp}" tofile="${archive}"/>
        </target>
      </configuration>
    </execution>
  </executions>
</plugin>