<execution>
  <id>copy-ems-evolutions</id>
  <phase>prepare-package</phase>
  <goals>
    <goal>run</goal>
  </goals>
  <configuration>
    <target name="add-ems-evolutions-into-zip">
      <available file="${basedir}/../target/package/ems_evolutions" property="ems.evolutions.exists"/>

      <condition property="skip.ems.evolutions">
        <not>
          <isset property="ems.evolutions.exists"/>
        </not>
      </condition>

      <echo if:set="skip.ems.evolutions"
            message="INFO: Skipping zip for 'ems_evolutions' â€” directory '${basedir}/../target/package/ems_evolutions' does not exist."/>

      <zip destfile="${archive}" update="true" whenempty="fail" unless="skip.ems.evolutions">
        <zipfileset dir="${basedir}/../target/package/ems_evolutions"
                    prefix="resources/ems_evolutions"
                    includes="**/*"/>
      </zip>
    </target>
  </configuration>
</execution>